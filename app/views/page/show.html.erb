<h1>Listing finished_projects</h1>

<table>
  <thead>
    <tr>
      <!-- <th>Student</th> -->
      <th>Project</th>
      <th>Description</th>
      <th>Assigned Date</th>
      <th>Due Date</th>
      <th>Submitted</th>
      <th>Repo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= project.assigned %></td>
        <td><%= project.due %></td>
        <% finished_project = @student.project_for(project) %>
        <td>
          <% if finished_project.submitted %>
            <i class="fa fa-check-square-o"></i>
          <% else %>
            <i class="fa fa-times"></i>
          <% end %>
        </td>
        <td class="form">
          <% if finished_project.submitted %>
            <%= finished_project.repo %>
          <% else %>
            <%= form_for (finished_project) do |f| %>
              <div>
                <%= f.text_field :repo %>
                <%= f.submit "Send" %>
              </div>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
