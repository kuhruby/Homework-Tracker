<%= form_for(@finished_project) do |f| %>
  <% if @finished_project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@finished_project.errors.count, "error") %> prohibited this finished_project from being saved:</h2>

      <ul>
      <% @finished_project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.select(:user_id, User.all.collect {|user| [ user.name, user.id ] },
    {include_blank: 'None'}, disabled: true) %>
  </div>
  <div class="field">
    <%= f.label :project_id %><br>
    <%= f.select(:project_id, Project.all.collect {|project| [ project.title, project.id ] },
    {include_blank: 'None'}, disabled: true) %>  </div>
  <div class="field">
    <%= f.label :submitted %><br>
      <% if @finished_project.submitted %>
        <i style="padding: 6px 0px 10px 6px" class="fa fa-check-square-o fa-lg"></i>
      <% else %>
        <i style="padding: 6px 0px 10px 6px" class="fa fa-times fa-lg"></i>
      <% end %>
  <div class="field">
    <%= f.label :repo %><br>
    <%= f.text_field :repo %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
